{
  "name": "copa-airlines-tailwind-design-system",
  "description": "A tailwind implementation of Copa Airlines",
  "version": "1.0.0",
  "keywords": [
    "Copa Airlines",
    "Design System",
    "Tailwind",
    "CSS",
    "CSS Framework"
  ],
  "main": "lib/cm-styles.js",
  "module": "lib/cm-styles.esm.js",
  "files": [
    "lib",
    "tailwind.config.js",
    "src/tailwind.css",
    "package.json"
  ],
  "author": "César Patiño <cpatino@copaair.com>",
  "license": "ISC",
  "private": false,
  "scripts": {
    "watch:tailwind": "postcss src/tailwind.css -o lib/cm-styles.css -w",
    "build:tailwind": "cross-env NODE_ENV=production postcss src/tailwind.css -o lib/cm-styles.css",
    "build": "npm run build:tailwind && rollup -c",
    "start": "sirv public",
    "serve": "serve public -p 80",
    "dev": "concurrently \"rollup -c -w\" \"npm run watch:tailwind\""
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-typescript": "^8.0.0",
    "@tsconfig/svelte": "^2.0.0",
    "autoprefixer": "^10.4.4",
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.3",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.1.0",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0",
    "svelte-check": "^2.0.0",
    "svelte-preprocess": "^4.0.0",
    "tailwindcss": "^3.0.23",
    "tslib": "^2.0.0",
    "typescript": "^4.0.0"
  },
  "dependencies": {
    "postcss-nested": "^5.0.6",
    "remixicon": "^2.5.0",
    "sirv-cli": "^2.0.0"
  }
}
