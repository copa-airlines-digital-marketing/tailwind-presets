{
  "name": "cmds-tailwind-styles",
  "version": "1.2.7",
  "description": "A tailwind preset of utilities for Copa Airlines design system",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "type": "module",
  "license": "ISC",
  "author": "cpatino@copaair.com",
  "keywords": [
    "Copa",
    "Airlines",
    "Design",
    "System",
    "Tailwind",
    "CSS"
  ],
  "repository": {
    "type": "git",
    "url": "https://cm-content-and-performance@dev.azure.com/cm-content-and-performance/cm-design-system/_git/cmds-tailwind-styles"
  },
  "scripts": {
    "test-v4": "npx @tailwindcss/cli -i ./test/v4/input.css -o ./test/v4/output.css --watch",
    "test": "vitest",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky",
    "test:cov": "vitest run --coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@eslint/js": "^9.21.0",
    "@tailwindcss/cli": "^4.0.8",
    "@types/node": "^22.13.5",
    "@vitest/coverage-v8": "^3.0.6",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^28.1.3",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.1",
    "tailwindcss": "^4.0.8",
    "typescript": "~5.7.3",
    "vite": "^6.1.1",
    "vitest": "^3.0.6"
  },
  "engines": {
    "node": ">=20.18.0"
  },
  "packageManager": "pnpm@10.4.1",
  "lint-staged": {
    "**/*.{js,ts}": [
      "eslint --fix"
    ],
    "**/*": "prettier --write --ignore-unknown"
  }
}
